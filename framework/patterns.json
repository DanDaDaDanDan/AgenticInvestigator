{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "Structural patterns only. Semantic checks (legal, PII, factual claims) are handled by LLM verification via Gemini 3 Pro MCP calls. See .claude/commands/verify.md for verification criteria.",

  "citation_format": {
    "pattern": "\\[S(\\d{3,4})\\]",
    "flags": "g",
    "description": "Source citation format [S001], [S002], etc."
  },

  "source_origin_signals": {
    "$comment": "Hints for source origin detection. LLM makes final determination.",
    "domains": {
      "apnews.com": { "origin": "wire:ap", "confidence": "high" },
      "reuters.com": { "origin": "wire:reuters", "confidence": "high" },
      "afp.com": { "origin": "wire:afp", "confidence": "high" }
    },
    "domain_suffixes": {
      ".gov": { "origin": "official:gov", "confidence": "high" },
      ".gov.uk": { "origin": "official:gov", "confidence": "high" },
      ".mil": { "origin": "official:mil", "confidence": "high" }
    },
    "text_markers": [
      { "text": "associated press", "origin": "wire:ap", "confidence": "medium" },
      { "text": "ap news", "origin": "wire:ap", "confidence": "medium" },
      { "text": "reuters", "origin": "wire:reuters", "confidence": "medium" },
      { "text": "press release", "origin": "press_release", "confidence": "medium" },
      { "text": "court filing", "origin": "official:court", "confidence": "low" },
      { "text": "complaint", "origin": "official:court", "confidence": "low" },
      { "text": "indictment", "origin": "official:court", "confidence": "low" },
      { "text": "docket", "origin": "official:court", "confidence": "low" }
    ]
  },

  "source_category_inference": {
    "$comment": "Hints for source category. LLM makes final determination.",
    "type_keywords": {
      "primary": "primary",
      "official": "government",
      "government": "government",
      "court": "government",
      "database": "government",
      "news": "news",
      "press": "news",
      "social": "social",
      "twitter": "social",
      "x_": "social"
    }
  },

  "gap_type_severity": {
    "$comment": "Configuration for gap severity levels.",
    "MISSING_EVIDENCE": "BLOCKER",
    "INSUFFICIENT_CORROBORATION": "BLOCKER",
    "CONTENT_MISMATCH": "BLOCKER",
    "CONTRADICTED_CLAIM": "BLOCKER",
    "LEGAL_DEFAMATION_RISK": "BLOCKER",
    "LEGAL_REVIEW_MISSING": "BLOCKER",
    "LEGAL_WORDING_RISK": "HIGH",
    "PRIVACY_RISK": "HIGH",
    "UNCITED_ASSERTION": "BLOCKER",
    "TASK_INCOMPLETE": "BLOCKER",
    "PERSPECTIVE_MISSING": "MEDIUM",
    "ADVERSARIAL_INCOMPLETE": "BLOCKER",
    "CURIOSITY_DEFICIT": "LOW",
    "STATE_INCONSISTENT": "HIGH",
    "SCHEMA_INVALID": "BLOCKER",
    "DUPLICATE_SOURCE_URL": "BLOCKER",
    "CIRCULAR_REPORTING_RISK": "BLOCKER",
    "INTEGRITY_VIOLATION": "HIGH",
    "GATE_FAILED": "BLOCKER"
  }
}
