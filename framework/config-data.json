{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "Canonical configuration data for AgenticInvestigator. All scripts should load via scripts/lib/config-loader.js",

  "thresholds": {
    "citation_density": 1.0,
    "capture_ready": 1.0,
    "people_investigated": 1.0,
    "entities_investigated": 1.0,
    "claims_verified": 1.0,
    "sources_captured": 1.0,
    "positions_documented": 1.0,
    "contradictions_explored": 1.0
  },

  "perspectives": {
    "required": [
      "Money",
      "Timeline",
      "Silence",
      "Documents",
      "Contradictions",
      "Relationships",
      "Hypotheses",
      "Assumptions",
      "Counterfactual",
      "Blind Spots"
    ]
  },

  "curiosity_tasks_per_cycle": 2,

  "files_to_scan": [
    "summary.md",
    "sources.md",
    "fact-check.md",
    "positions.md",
    "people.md",
    "timeline.md",
    "theories.md",
    "statements.md",
    "organizations.md"
  ],

  "required_files": [
    "summary.md",
    "sources.md",
    "fact-check.md",
    "positions.md"
  ],

  "required_citation_sections": [
    "Key Findings",
    "Timeline",
    "Background",
    "Evidence",
    "Conclusion"
  ],

  "api": {
    "verification_model": "gemini-3-flash-preview"
  }
}
